# TaxPoynt eInvoice Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Do not commit the .env file to version control

# App Environment
APP_ENV=development  # Options: development, staging, production

# Security
SECRET_KEY=your_secret_key_here  # Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_here  # For encrypting sensitive data

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_database_password
POSTGRES_DB=taxpoynt

# Redis Configuration (for caching, session management, etc.)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password  # Leave empty if no auth required
REDIS_DB=0

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=True
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=TaxPoynt eInvoice

# Frontend URLs
FRONTEND_URL=http://localhost:3000

# OAuth Providers (if used)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Odoo Credentials
ODOO_HOST=your_odoo_instance.odoo.com
ODOO_PORT=443
ODOO_PROTOCOL=jsonrpc+ssl  # Options: jsonrpc, jsonrpc+ssl
ODOO_DATABASE=your_odoo_database
ODOO_USERNAME=your_odoo_username
ODOO_PASSWORD=your_odoo_password
ODOO_API_KEY=your_odoo_api_key  # Use either PASSWORD or API_KEY
ODOO_AUTH_METHOD=password  # Options: password, api_key

# IRN Service Configuration
FIRS_SERVICE_ID=your_firs_service_id  # For Nigerian IRN generation
IRN_EXPIRY_DAYS=30  # Number of days before IRNs expire

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
