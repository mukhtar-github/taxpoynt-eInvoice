# TaxPoynt eInvoice Environment Configuration Example
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/taxpoynt

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# FIRS API Configuration
FIRS_API_URL=https://api.firs.gov.ng
FIRS_API_KEY=your_api_key_here
FIRS_API_SECRET=your_api_secret_here

# FIRS Sandbox Environment
FIRS_SANDBOX_API_URL=https://sandbox.firs.gov.ng/api
FIRS_SANDBOX_API_KEY=your_sandbox_key_here
FIRS_SANDBOX_API_SECRET=your_sandbox_secret_here
FIRS_USE_SANDBOX=true

# FIRS Submission Configuration
FIRS_SUBMISSION_TIMEOUT=30
FIRS_RETRY_ATTEMPTS=3
FIRS_MAX_BATCH_SIZE=100

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# UBL Configuration
UBL_SCHEMA_PATH=schemas/ubl

# API Configuration
API_V1_STR=/api/v1
